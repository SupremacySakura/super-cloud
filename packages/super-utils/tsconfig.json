{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationDir": "dist/types",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}