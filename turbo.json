{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "PORT",
        "HOST"
      ],
      "inputs": [
        "src/**",
        "public/**",
        "index.html",
        "vite.config.*",
        "../../packages/**"
      ]
    },
    "preview": {
      "cache": false
    }
  },
  "globalDependencies": [
    "pnpm-lock.yaml",
    ".env"
  ]
}